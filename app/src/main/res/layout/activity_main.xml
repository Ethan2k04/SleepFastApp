<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:fillViewport="true"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_grey"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="12dp">

            <TextView
                android:id="@+id/titleDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/titleDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="August 12, 2024"
                android:textColor="@color/light_grey"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="18dp">

                <ImageButton
                    android:id="@+id/btnBottomMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_menu_bar_28dp" />

                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:onClick="onBtnUserPanelClickHandler" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/weekDaysContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_grey"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/titleLayout"></LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/fg_grey" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_grey"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/timeSleep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/bedTimeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="💤️BEDTIME"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnStartTimeLeft"
                            android:layout_width="16dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/bg_rounded_background"
                            android:paddingLeft="6dp"
                            android:src="@drawable/ic_arrow_back_ios_16dp" />

                        <TextView
                            android:id="@+id/bedTimeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23 : 59"
                            android:textColor="@color/white"
                            android:textSize="24dp" />

                        <ImageButton
                            android:id="@+id/btnStartTimeRight"
                            android:layout_width="16dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp"
                            android:background="@drawable/bg_rounded_background"
                            android:src="@drawable/ic_arrow_forward_ios_16dp" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/startDayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tomorrow"
                        android:textColor="@color/light_grey"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wakeUpLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingHorizontal="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⏰WAKE UP"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnEndTimeLeft"
                            android:layout_width="16dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="12dp"
                            android:background="@drawable/bg_rounded_background"
                            android:paddingLeft="6dp"
                            android:src="@drawable/ic_arrow_back_ios_16dp" />

                        <TextView
                            android:id="@+id/wakeUpText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08 : 00"
                            android:textColor="@color/white"
                            android:textSize="24dp" />

                        <ImageButton
                            android:id="@+id/btnEndTimeRight"
                            android:layout_width="16dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp"
                            android:background="@drawable/bg_rounded_background"
                            android:src="@drawable/ic_arrow_forward_ios_16dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/endDayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tomorrow"
                        android:textColor="@color/light_grey"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/ringViewFrame"
                android:layout_width="wrap_content"
                android:layout_height="360dp"
                android:layout_marginTop="-12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/timeSleep"
                tools:context=".MainActivity">

                <com.example.snoretracker.ui.RingView
                    android:id="@+id/ringView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/btnStartStopFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ringViewFrame">

                <FrameLayout
                    android:id="@+id/btnStart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/btnStartLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_rounded_background">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:text="START"
                            android:textColor="@color/light_orange" />

                    </RelativeLayout>

                    <com.example.snoretracker.ui.CustomFrameLayout
                        android:id="@+id/btnStartFrame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onBtnStartClickHandler"/>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/btnStop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/btnStopLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_rounded_background">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:text="END"
                            android:textColor="@color/light_orange"/>

                    </RelativeLayout>

                    <com.example.snoretracker.ui.CustomFrameLayout
                        android:id="@+id/btnStopFrame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onBtnStopClickHandler"/>

                </FrameLayout>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/alarmBoardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnStartStopFrame">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alarm Options"
                    android:textColor="@color/white"
                    android:textSize="24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_rounded_background"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="16dp"
                        android:text="Alarm"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <Switch
                        android:id="@+id/alarmSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="16dp"
                        android:thumb="@drawable/seekbar_thumb"
                        android:track="@drawable/seekbar_track" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/alarmPanelView"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_rounded_background"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingHorizontal="16dp"
                            android:text="Sounds"
                            android:textColor="@color/white"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="8dp"
                                android:gravity="center"
                                android:text="Ringtone"
                                android:textColor="@color/light_grey"
                                android:textSize="16dp" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/ic_arrow_forward_ios_16dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="16dp"
                        android:background="@color/dark_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/ic_speaker_icon_off_16dp" />

                        <SeekBar
                            android:id="@+id/volumeSeekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="-8dp"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="50"
                            android:progressBackgroundTint="@color/light_grey"
                            android:progressTint="@color/light_orange"
                            android:thumb="@drawable/seekbar_thumb" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="12dp"
                            android:src="@drawable/ic_speaker_icon_on_16dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="16dp"
                        android:background="@color/dark_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingHorizontal="16dp"
                            android:text="Snooze"
                            android:textColor="@color/white"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <Switch
                                android:id="@+id/snoozeSwitch"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingHorizontal="16dp"
                                android:thumb="@drawable/seekbar_thumb"
                                android:track="@drawable/seekbar_track" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sleepBoardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/alarmBoardView">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sleep Analysis"
                    android:textColor="@color/white"
                    android:textSize="24dp" />

                <RelativeLayout
                    android:id="@+id/phaseDashBoard"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_rounded_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="16dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="14dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="6dp"
                                android:src="@drawable/ic_phase_16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PHASE"
                                android:textSize="12dp"
                                android:textColor="@color/light_grey" />
                        </LinearLayout>

                        <com.example.snoretracker.ui.SleepPhaseView
                            android:id="@+id/sleepChartView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                    <com.example.snoretracker.ui.CustomFrameLayout
                        android:id="@+id/phaseFrame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onBtnSleepPhaseClickHandler"/>

                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/trendDashBoard"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_rounded_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toStartOf="@+id/qualityDashBoard"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="8dp"
                                android:paddingHorizontal="16dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginRight="6dp"
                                    android:src="@drawable/ic_sleep_trend_16dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TREND"
                                    android:textSize="12dp"
                                    android:textColor="@color/light_grey" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/avgSleepTimeText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="8h 30m"
                                android:textColor="@color/white"
                                android:textSize="32dp"
                                android:layout_marginLeft="16dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Average"
                                android:textColor="@color/light_grey"
                                android:textSize="20dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="-6dp"/>

                            <com.example.snoretracker.ui.SleepTrendView
                                android:id="@+id/sleepTrendView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                        <com.example.snoretracker.ui.CustomFrameLayout
                            android:id="@+id/trendFrame"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:onClick="onBtnSleepTrendClickHandler"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/qualityDashBoard"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_rounded_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/phaseDashBoard"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingVertical="8dp"
                                android:paddingHorizontal="16dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginRight="6dp"
                                    android:src="@drawable/ic_sleep_quality_16dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="QUALITY"
                                    android:textSize="12dp"
                                    android:textColor="@color/light_grey" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="30"
                                android:textColor="@color/white"
                                android:layout_marginHorizontal="16dp"
                                android:textSize="32dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Low"
                                android:textColor="@color/white"
                                android:layout_marginHorizontal="16dp"
                                android:layout_marginTop="-6dp"
                                android:textSize="20dp"/>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/colorGradientBar"
                                    android:layout_width="match_parent"
                                    android:layout_height="6dp"
                                    android:layout_marginHorizontal="16dp"
                                    android:layout_marginTop="6dp"
                                    android:background="@drawable/ic_gradient_bar" />

                                <View
                                    android:id="@+id/indicator"
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:background="@drawable/ic_white_circle"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginLeft="30dp"/>

                            </RelativeLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sleep quality below average last week."
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginHorizontal="16dp"/>


                        </LinearLayout>

                        <com.example.snoretracker.ui.CustomFrameLayout
                            android:id="@+id/qualityFrame"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:onClick="onBtnSleepQualityClickHandler"/>

                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <RelativeLayout
                    android:id="@+id/soundDashBoard"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_rounded_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="8dp"
                            android:paddingHorizontal="16dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginRight="6dp"
                                android:src="@drawable/ic_sound_16dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SOUND"
                                android:textSize="12dp"
                                android:textColor="@color/light_grey" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_marginTop="5dp"
                                    android:src="@drawable/ic_upward_triangle_16dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Snore"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/white"
                                    android:textSize="16dp"/>

                                <TextView
                                    android:id="@+id/snoreTimeNum"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0t"
                                    android:textColor="@color/light_grey"
                                    android:textSize="16dp"
                                    android:gravity="right"/>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:background="@color/dark_grey" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="8dp">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_marginTop="5dp"
                                    android:src="@drawable/ic_downward_triangle_16dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Speech"
                                    android:textColor="@color/white"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="16dp"/>

                                <TextView
                                    android:id="@+id/speechTimeNum"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0t"
                                    android:textColor="@color/light_grey"
                                    android:textSize="16dp"
                                    android:gravity="right"/>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="8dp"
                                android:background="@color/dark_grey" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="8dp">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:layout_marginTop="5dp"
                                    android:src="@drawable/ic_downward_triangle_16dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Wake up"
                                    android:textColor="@color/white"
                                    android:textSize="16dp"
                                    android:layout_marginLeft="5dp"/>

                                <TextView
                                    android:id="@+id/wakeupTimeNum"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0t"
                                    android:textColor="@color/light_grey"
                                    android:textSize="16dp"
                                    android:gravity="right"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <com.example.snoretracker.ui.CustomFrameLayout
                        android:id="@+id/soundFrame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="onBtnSleepSoundClickHandler" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="190dp"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="64db"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            app:layout_constraintStart_toStartOf="@id/gaugeView"
                            app:layout_constraintEnd_toEndOf="@id/gaugeView"
                            app:layout_constraintTop_toTopOf="@id/gaugeView"
                            app:layout_constraintBottom_toBottomOf="@id/gaugeView"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="18dp"/>

                        <com.example.snoretracker.ui.GaugeView
                            android:id="@+id/gaugeView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>



                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/soundDashBoard"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="All user data preserved on device"
                    android:textSize="16dp">

                </TextView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>
